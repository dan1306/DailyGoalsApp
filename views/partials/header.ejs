<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Goals App</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Exo:wght@200&family=Fredoka+One&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <% if (user) { %>
      <nav class="row">
        <div class="col-4">
          <h1 class="brand-name">Daily Goals</h1>
        </div>
        <div class="col-2"></div>
        <div class="col-6 row">
          <div class="col-3">
            <p class="home-link"><a href="/">Home</a></p>
          </div>
          <div class="col-3">
            <p class="new-link"><a href="/new">Create Goal</a></p>
          </div>
          <div class="col-3">
            <p class="logIn-SignUp"><a href="/logout">Log Out</a></p>
          </div>
        </div>
      </nav>

    <% } else { %>
      <nav class="row">
        <div class="col-4">
          <h1 class="brand-name">Daily Goals</h1>
        </div>
        <div class="col-2"></div>
        <div class="col-6 row">
          <div class="col-3"></div>
          <div class="col-3">
            <p class="logIn-SignUp"><a href="/auth/google">LogIn</a></p>
          </div>
          <div class="col-3"></div>
        </div>
      </nav>

    <% } %>

