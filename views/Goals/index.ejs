<%- include("../partials/header") -%> 
<% if (user) { %>

<div class="row goal-field">
  <% Goals.forEach((val) => { %>

  <div class="col-lg-3 col-md-6 col-sm-6 goal-body">
    <div id="Title">
      <h4 class="goal-title">Title: <%= val.title %></h4>
      <hr />
    </div>

    <div id="Date">
      <h4 class="goal-date">
        Created On: <%= val.createdAt.toLocaleDateString() %>
      </h4>
      <hr />
    </div>

    <div class="goal-buttons">
      <a href="/detail/<%= val._id %>">
        <button type="button" class="btn btn-primary goal-innerButtons">
          Details
        </button>
      </a>
      <form action="/<%= val._id %>/delete?_method=DELETE" method="POST">
        <button type="submit" class="btn btn-danger goal-innerButtons">
          Delete
        </button>
      </form>
    </div>
  </div>

  <% }); %>
</div>

<% } else { %>

  <div class="row goal-field">
  
    <div class="col-lg-3 col-md-6 col-sm-6 goal-body">
      <div id="Title">
        <h4 class="goal-title"> Click LogIn</h4>
        <hr />
      </div>

      <div id="Date">
        <h4 class="goal-date">
          If You Have No Account You Will Be Redirected To Gmail To Create One
        </h4>
        <hr />
      </div>

      <div class="goal-buttons">
        <a href="/auth/google">
          <button type="button" class="btn btn-primary goal-innerButtons">
            SignUp/LogIn
          </button>
        </a>
      </div>
    </div>
  </div>

<% } %>
<%- include("../partials/footer") -%>
